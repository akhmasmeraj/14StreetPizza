        </activity>
        <activity
            android:name="com.streetpizza.OrderList"
            android:label="@string/title_activity_order_list" >
        </activity>
        <activity
            android:name="com.streetpizza.SideLines"
            android:label="@string/title_activity_side_lines" >
        </activity>
        <activity
            android:name="com.streetpizza.Pizza"
            android:label="@string/title_activity_pizza" >
        </activity>
        <activity
            android:name="com.streetpizza.SweetSomethings"
            android:label="@string/title_activity_sweet_somethings" >
